<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduSolver - Resolva Problemas</title>
    <!-- Carrega o Tailwind CSS para estilos modernos e responsivos -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Estilos personalizados para o aplicativo -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">

    <!-- Container principal do aplicativo -->
    <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
        <h1 class="text-3xl md:text-4xl font-bold text-center text-indigo-700 mb-6">EduSolver</h1>
        <p class="text-center text-gray-600 mb-8">Resolva problemas de matem√°tica e aprenda!</p>

        <!-- Se√ß√£o do problema -->
        <div class="bg-indigo-100 text-indigo-800 rounded-lg p-6 mb-6 text-center shadow-inner">
            <span id="problem" class="text-4xl md:text-5xl font-extrabold">10 + 5 = ?</span>
        </div>

        <!-- Se√ß√£o de entrada do usu√°rio -->
        <div class="flex flex-col gap-4 mb-6">
            <input type="number" id="answer-input" placeholder="Digite sua resposta aqui" class="w-full px-5 py-3 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-indigo-500 transition duration-300 text-lg text-center">
            <button id="check-button" class="w-full bg-indigo-600 text-white font-bold py-3 rounded-lg hover:bg-indigo-700 transition duration-300 shadow-lg transform active:scale-95">Verificar</button>
        </div>

        <!-- Se√ß√£o de feedback -->
        <div id="feedback" class="text-center text-lg font-semibold min-h-[2rem]"></div>

        <!-- Bot√£o para um novo problema -->
        <button id="new-problem-button" class="w-full bg-gray-300 text-gray-700 font-bold py-3 rounded-lg hover:bg-gray-400 transition duration-300 mt-4 shadow-md hidden">Novo Problema</button>
    </div>

    <!-- Script JavaScript para a l√≥gica do aplicativo -->
    <script>
        // Mapeamento dos elementos HTML para vari√°veis JavaScript
        const problemElement = document.getElementById('problem');
        const answerInput = document.getElementById('answer-input');
        const checkButton = document.getElementById('check-button');
        const newProblemButton = document.getElementById('new-problem-button');
        const feedbackElement = document.getElementById('feedback');

        let currentAnswer;

        /**
         * Gera um novo problema de adi√ß√£o ou subtra√ß√£o.
         */
        function generateProblem() {
            // Gera dois n√∫meros aleat√≥rios entre 1 e 20
            const num1 = Math.floor(Math.random() * 20) + 1;
            const num2 = Math.floor(Math.random() * 20) + 1;
            const operator = Math.random() > 0.5 ? '+' : '-';

            let problemText;
            if (operator === '+') {
                problemText = `${num1} + ${num2} = ?`;
                currentAnswer = num1 + num2;
            } else {
                // Garante que o resultado da subtra√ß√£o n√£o seja negativo
                const largerNum = Math.max(num1, num2);
                const smallerNum = Math.min(num1, num2);
                problemText = `${largerNum} - ${smallerNum} = ?`;
                currentAnswer = largerNum - smallerNum;
            }

            // Atualiza a interface com o novo problema
            problemElement.textContent = problemText;
            answerInput.value = '';
            feedbackElement.textContent = '';
            checkButton.classList.remove('hidden');
            newProblemButton.classList.add('hidden');
            answerInput.focus();
        }

        /**
         * Verifica a resposta do usu√°rio.
         */
        function checkAnswer() {
            const userAnswer = parseInt(answerInput.value, 10);

            // Verifica se a entrada √© um n√∫mero v√°lido
            if (isNaN(userAnswer)) {
                feedbackElement.textContent = 'Por favor, digite um n√∫mero v√°lido.';
                feedbackElement.classList.remove('text-green-600', 'text-red-600');
                feedbackElement.classList.add('text-yellow-600');
                return;
            }

            // Compara a resposta do usu√°rio com a resposta correta
            if (userAnswer === currentAnswer) {
                feedbackElement.textContent = 'Resposta correta! üéâ';
                feedbackElement.classList.remove('text-red-600', 'text-yellow-600');
                feedbackElement.classList.add('text-green-600');
            } else {
                feedbackElement.textContent = `Resposta incorreta. A resposta correta √© ${currentAnswer}.`;
                feedbackElement.classList.remove('text-green-600', 'text-yellow-600');
                feedbackElement.classList.add('text-red-600');
            }

            // Esconde o bot√£o de verificar e mostra o bot√£o de novo problema
            checkButton.classList.add('hidden');
            newProblemButton.classList.remove('hidden');
        }

        // Adiciona os event listeners aos bot√µes
        checkButton.addEventListener('click', checkAnswer);
        newProblemButton.addEventListener('click', generateProblem);

        // Permite verificar a resposta com a tecla Enter
        answerInput.addEventListener('keydown', (event) => {
            if (event.key === 'Enter' && !checkButton.classList.contains('hidden')) {
                checkAnswer();
            }
        });
        
        // Inicia o aplicativo gerando o primeiro problema quando a p√°gina carrega
        window.onload = generateProblem;
    </script>
</body>
</html>

